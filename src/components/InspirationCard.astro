---
import type { Playlist } from "../lib/data";
import PureInlineArtists from "./PureInlineArtists.astro";
interface Props {
  contentObj: any;
}

// {'thumbnail': 'https://firebasestorage.googleapis.com/v0/b/creator-app-tyg.appspot.com/o/02621113f3fd0f5aaf759a8174bfe3a0.jpg?alt=media&token=6812e9fe-152b-4743-bee9-ce7b42796841',
//     'url': 'https://drive.google.com/file/d/19izRNBNZbdZrgsHLps1w2ixMPPBZw2pd/view',
//     'dateAdded': 1654989263834,
//     'author_username': null,
//     'platform': 'drive.google.com',
//     'users': ['KlGnWXZjV8c7yfcuu1eh4aBOtGW2'],
//     'title': 'IMG_1690.JPG',
//     'id': 'file_19izRNBNZbdZrgsHLps1w2ixMPPBZw2pd',
//     'engagement': null,
//     'pid': 'drive.google.com_file_19izRNBNZbdZrgsHLps1w2ixMPPBZw2pd'},

const { contentObj } = Astro.props;
---

<a
  href={`/post/2a`}
  class="playlist-card p-4 flex-col items-center group relative transition-all duration-300 overflow-hidden gap-5 rounded-md shadow-lg hover:shadow-xl outline-none bg-zinc-500/5 hover:bg-zinc-500/20 focus:bg-zinc-500/20"
  data-color={"#7f1d1d"}
  transition:name=`playlist  box`
>
  <div class="w-40">
    <div class="relative group mx-auto h-40 w-full flex-none shadow-lg">
      <img
        src={contentObj?.thumbnail}
        alt={contentObj?.title}
        class="object-cover h-full w-full rounded-md shadow-[5px_0_30px_0px_rgba(0,0,0,0.3)]"
        transition:name=`playlist ${contentObj?.id} image`
      />
      <div
        class="absolute right-2 bottom-2 translate-y-4 group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all"
        transition:name=`playlist ${contentObj?.id} play`
      >
      </div>
    </div>
    <div class="pt-2">
      <div
        class="font-bold block truncate"
        transition:name=`playlist ${contentObj?.id} title`
      >
        {contentObj?.title}
      </div>
      <div class="text-gray-400 text-xs">
        <PureInlineArtists artists={[]} />
      </div>
    </div>
  </div>
</a>
